<div class="container-fluid h-100 p-0">
  <div class="row no-gutters h-100 align-items-md-center justify-content-md-center mt-5">
    <div class="col col-md-6 card ">
      <div class="card-header bg-info text-center text-white">
        <h2>Forgot your password?</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="form-group">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'E-mail' %>
        </div>
        <div class="actions mb-2">
          <%= f.submit 'Send me reset password instructions', class: 'btn btn-outline-info btn-rounded btn-block mt-2' %>
        </div>
        <% end %>

        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>
