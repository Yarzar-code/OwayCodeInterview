<div class="row m-2">
  <h4>Lists of Cabs</h4>
  <div class="cab-add-export-row">
    <%= link_to 'Add Cab', new_cab_path, class: 'btn btn-primary btn-md' %>
    <%= link_to 'Download as Excel', cabs_path(format: :xlsx), class: 'btn btn-success btn-md' %>
  </div>
</div>

<table class=" table table-striped sortable">
 <thead>
    <tr>
      <th>#</th>
      <th>Plate Number</th>
      <th>Model</th>
      <th>Mileage</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @cabs.each_with_index do |cab, index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= link_to cab.plate_number, cab_path(cab) %></td>
          <td><%=cab.model%></td>
          <td><%=cab.mileage%></td>
          <td>
            <%= link_to "Edit", edit_cab_path(cab), class: 'btn btn-info btn-md' %>
            <%= link_to "Delete", cab_path(cab), :method => :delete, class: 'btn btn-danger btn-md' %>
          </td>
        </tr>
    <%end%>
  </tbody>
</table>
<%= will_paginate @posts %>